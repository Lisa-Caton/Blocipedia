
<div class="media">
  <div class="media-body">
  <h4 class="media-heading" style="display:inline-block">
    <% if wiki.private? %>
      <%= link_to wiki.title, wiki, class: "private" %> <small>Private Wiki</small>
    <% else %>
      <%= link_to wiki.title, wiki %>
    <% end %>
    </h4>
     <small><%= link_to 'Show', wiki_path(wiki.id) if policy(wiki).show? %></small>
     <small><%= link_to 'Edit', edit_wiki_path(wiki.id) if policy(wiki).edit? %></small>
     <small><%= link_to 'Destroy', wiki_path(wiki.id),
      method: :delete,
      data: { confirm: 'Are you sure you want to delete this wiki?' } if policy(wiki).destroy? %></small>
  </div>
</div>
