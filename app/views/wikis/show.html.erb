
<div class="f1">
  <%= link_to '<< back to the Forest', wikis_path %>
  <div class="row">
    <div class="col-md-6">
    <h2><%= @wiki.title %></h2>
    <small><%= markdown(@wiki.body).html_safe %></small>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 box-shaded">
      <h4>Creator</h4>
        <span class="glyphicon glyphicon-user"></span>
        <%= @wiki.user.username %>
        <%= current_user.email %>

      <% if @wiki.private? %>
      <h4>Collaborators</h4>
         <%= render partial: 'collaborators/view_collaborators', locals: { wiki: @wiki, user: current_user } %>
      <% end %>
    </div>
  </div>
</div>
